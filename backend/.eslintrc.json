{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base" // config base eslint
    ],
    "parser": "@typescript-eslint/parser", // typescript parser
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "settings": {
      "import/resolver": {
        "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
      }
    },
    "rules": {
      "max-len": [2, 100]
    }
}
